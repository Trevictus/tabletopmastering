# ============================================
# TABLETOP MASTERING - ENVIRONMENT VARIABLES (DEVELOPMENT)
# ============================================
# Copy this file as .env and modify the values

# ---- Environment ----
NODE_ENV=development

# ---- MongoDB ----
# For local development with Docker Compose
MONGO_USERNAME=admin
MONGO_PASSWORD=changeme
MONGO_DBNAME=tabletop_mastering
MONGODB_URI=mongodb://admin:changeme@localhost:27017/tabletop_mastering?authSource=admin

# ---- JWT (Authentication) ----
# Use a simple key for development, but change it for production
# You can generate one with: openssl rand -base64 64
JWT_SECRET=your_development_secret_key_change_in_production
JWT_EXPIRE=7d

# ---- URLs ----
CLIENT_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000/api

# ---- Server ----
PORT=3000

# ---- Observability (Optional) ----
# Sentry DSN for error tracking (leave empty to disable)
SENTRY_DSN=

# Grafana password for observability dashboard
GRAFANA_PASSWORD=admin

# ---- BGG Mock (Development) ----
# Set to true to use mock BGG service instead of real API
USE_BGG_MOCK=true
